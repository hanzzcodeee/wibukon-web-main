<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('layout/head') %>
</head>
<body class="pb-24 pt-16 md:pt-20 animate-fade">
    <%- include('layout/navbar') %>

    <div class="md:container md:mx-auto md:px-4 mb-8">
        <div class="flex overflow-x-auto snap-x snap-mandatory hide-scrollbar gap-0 md:gap-4 md:py-4">
            <% data.ongoing.slice(0, 5).forEach((item, index) => { %>
                <div class="w-full md:w-[80%] lg:w-[60%] flex-shrink-0 snap-center relative aspect-[16/9] md:aspect-[21/9] md:rounded-3xl overflow-hidden group">
                    <img src="<%= item.img %>" class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-out">
                    <div class="absolute inset-0 bg-gradient-to-t from-black via-black/40 to-transparent"></div>
                    <div class="absolute bottom-0 left-0 w-full p-6 md:p-10 flex flex-col items-start animate-slide" style="animation-delay: 0.2s;">
                        <span class="bg-purple-600 text-white text-[10px] md:text-xs font-bold px-3 py-1 rounded-full mb-3 uppercase tracking-wider shadow-lg shadow-purple-500/30">Sedang Tayang</span>
                        <h2 class="text-2xl md:text-4xl font-black text-white leading-tight mb-2 md:mb-4 line-clamp-2 drop-shadow-lg"><%= item.title %></h2>
                        <div class="flex items-center gap-3 text-xs md:text-sm text-zinc-300 font-medium mb-4">
                            <span class="flex items-center gap-1"><svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg> <%= item.rating %></span>
                            <span>â€¢</span>
                            <span>Episode <%= item.eps %></span>
                        </div>
                        <a href="/anime/<%= item.id %>" class="bg-white text-black px-6 py-2.5 rounded-full font-bold text-sm hover:bg-zinc-200 transition flex items-center gap-2">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M8 5v14l11-7z"/></svg>
                            Tonton Sekarang
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <main class="container mx-auto px-4 space-y-10">
        <section class="animate-slide" style="animation-delay: 0.3s;">
            <div class="flex justify-between items-end mb-5">
                <h2 class="text-xl font-bold text-white">Episode Terbaru</h2>
                <a href="/schedule" class="text-xs font-medium text-purple-400 hover:text-purple-300">Lihat Jadwal &rarr;</a>
            </div>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                <% data.ongoing.forEach(item => { %>
                    <a href="/anime/<%= item.id %>" class="group relative rounded-xl overflow-hidden aspect-[3/4] glass-card hover:border-purple-500/50 transition duration-300">
                        <img src="<%= item.img %>" loading="lazy" class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-80"></div>
                        <div class="absolute top-2 right-2 bg-black/60 backdrop-blur text-[10px] font-bold text-white px-2 py-1 rounded border border-white/10">
                            Eps <%= item.eps %>
                        </div>
                        <div class="absolute bottom-0 p-3 w-full">
                            <h3 class="text-white text-xs font-bold line-clamp-2 leading-tight group-hover:text-purple-300 transition"><%= item.title %></h3>
                        </div>
                    </a>
                <% }) %>
            </div>
        </section>

        <section class="animate-slide" style="animation-delay: 0.4s;">
            <h2 class="text-xl font-bold text-white mb-5">Rekomendasi Anime</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <% data.recommend.forEach(item => { %>
                    <a href="/anime/<%= item.id %>" class="flex gap-4 p-3 rounded-2xl glass-card hover:bg-white/5 transition group">
                        <div class="w-20 h-28 flex-shrink-0 rounded-lg overflow-hidden relative">
                            <img src="<%= item.img %>" loading="lazy" class="w-full h-full object-cover group-hover:scale-110 transition duration-500">
                        </div>
                        <div class="flex flex-col justify-center py-1">
                            <h3 class="text-sm font-bold text-white line-clamp-2 mb-1 group-hover:text-purple-400 transition"><%= item.title %></h3>
                            <div class="flex items-center gap-2 text-xs text-zinc-400 mb-2">
                                <span class="bg-zinc-800 px-1.5 py-0.5 rounded"><%= item.year %></span>
                                <span class="flex items-center gap-1 text-yellow-500"><svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg> <%= item.rating %></span>
                            </div>
                            <span class="text-[10px] text-zinc-500 line-clamp-1"><%= item.status %></span>
                        </div>
                    </a>
                <% }) %>
            </div>
        </section>
    </main>
</body>
</html>
