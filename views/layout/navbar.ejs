<script>
    const desktopInput = document.getElementById('desktopInput')
    const mobileInput = document.getElementById('mobileInput')
    const desktopHistory = document.getElementById('desktopHistory')
    const desktopList = document.getElementById('desktopHistoryList')
    const mobileList = document.getElementById('mobileHistoryList')

    const getHistory = () => JSON.parse(localStorage.getItem('wibukonHistory') || '[]')
    
    const saveToHistory = (query) => {
        if(!query || query.trim() === '') return
        let history = getHistory()
        history = history.filter(h => h.toLowerCase() !== query.toLowerCase())
        history.unshift(query)
        if(history.length > 10) history.pop()
        localStorage.setItem('wibukonHistory', JSON.stringify(history))
    }

    const deleteHistoryItem = (e, item) => {
        e.preventDefault()
        e.stopPropagation()
        let history = getHistory()
        history = history.filter(h => h !== item)
        localStorage.setItem('wibukonHistory', JSON.stringify(history))
        renderHistory()
    }

    const clearAllHistory = () => {
        localStorage.removeItem('wibukonHistory')
        renderHistory()
    }

    const renderHistory = () => {
        const history = getHistory()
        const desktopHTML = history.map(item => `
            <div class="flex items-center justify-between px-4 py-2 hover:bg-white/5 group cursor-pointer border-b border-white/5 last:border-0 transition" onclick="selectHistory('${item}')">
                <div class="flex items-center gap-3">
                    <svg class="w-3 h-3 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    <span class="text-sm text-zinc-300 group-hover:text-white">${item}</span>
                </div>
                <button onclick="deleteHistoryItem(event, '${item}')" class="text-zinc-600 hover:text-red-400 p-1 rounded-full hover:bg-white/10 transition">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
        `).join('')

        const mobileHTML = history.map(item => `
            <div class="flex items-center justify-between p-3 bg-zinc-800/40 rounded-xl border border-white/5 active:scale-[0.98] transition cursor-pointer" onclick="selectHistory('${item}')">
                <div class="flex items-center gap-3">
                    <svg class="w-4 h-4 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                    <span class="text-sm text-zinc-300 font-medium">${item}</span>
                </div>
                <button onclick="deleteHistoryItem(event, '${item}')" class="p-2 text-zinc-500 hover:text-red-400 rounded-lg hover:bg-white/5 transition">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                </button>
            </div>
        `).join('')

        const emptyHTML = `<div class="p-4 text-center text-xs text-zinc-500">Belum ada riwayat</div>`

        desktopList.innerHTML = history.length ? desktopHTML : emptyHTML
        mobileList.innerHTML = history.length ? mobileHTML : emptyHTML
    }

    const selectHistory = (query) => {
        window.location.href = `/search?q=${encodeURIComponent(query)}`
    }

    const openMobileSearch = () => {
        document.getElementById('mobile-search').classList.remove('hidden')
        renderHistory()
        setTimeout(() => document.getElementById('mobileInput').focus(), 100)
    }

    desktopInput.addEventListener('focus', () => {
        renderHistory()
        desktopHistory.classList.remove('hidden')
    })

    document.addEventListener('click', (e) => {
        if (!desktopInput.contains(e.target) && !desktopHistory.contains(e.target)) {
            desktopHistory.classList.add('hidden')
        }
    })

    document.getElementById('desktopSearchForm').addEventListener('submit', (e) => {
        saveToHistory(desktopInput.value)
    })

    document.getElementById('mobileSearchForm').addEventListener('submit', (e) => {
        saveToHistory(mobileInput.value)
    })

    document.addEventListener('DOMContentLoaded', renderHistory)
</script>
